<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolBar_topBarGallery"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:tabGravity="fill"
            app:tabMode="fixed">

            <!-- Container -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <!-- BACK BUTTON -->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_back_button"
                    android:id="@+id/imgView_back_topBarGallery"
                    android:layout_marginEnd="10dp"
                    android:layout_centerVertical="true"
                    tools:ignore="ContentDescription"/>

                <!-- SPINNER, Show the phone paths where I can get pictures -->
                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner_topBarGallery"
                    android:layout_toEndOf="@+id/imgView_back_topBarGallery"
                    android:layout_toStartOf="@+id/imgView_check_topBarGallery"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"/>

                <!-- CHECK BUTTON -->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imgView_check_topBarGallery"
                    android:src="@drawable/ic_check"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="15dp"
                    android:layout_centerVertical="true"
                    tools:ignore="ContentDescription"/>

            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>


</merge>
<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.karat.fksc.Members.ChampionshipActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relLayout_container_activityChampionship">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relLayout_topBar_activityChampionship">

            <!-- Topbar -->
            <include layout="@layout/layout_top_bar"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relLayout_viewPager_activityChampionship"
            android:layout_below="@+id/relLayout_topBar_activityChampionship"
            android:layout_marginBottom="50dp">

            <!-- ViewPager -->
            <include layout="@layout/layout_middle_viewpager"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relLayout_bottoNavView_activityChampionship">

            <!-- BottomNavigationView -->
            <include layout="@layout/layout_bottom_nav_view"/>

        </RelativeLayout>

    </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.karat.fksc.members.ChampionshipActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relLayout_container_activityChampionship">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relLayout_topBar_activityChampionship">

            <!-- Topbar -->
            <include layout="@layout/layout_top_bar"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relLayout_viewPager_activityChampionship"
            android:layout_below="@+id/relLayout_topBar_activityChampionship"
            android:layout_marginBottom="50dp">

            <!-- RecylerView -->
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/recyclerView_activityChampionship"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relLayout_bottoNavView_activityChampionship">

            <!-- BottomNavio
            igationView -->
            <include layout="@layout/layout_bottom_nav_view"/>

        </RelativeLayout>

        <!-- ProgressBar -->
        <include layout="@layout/snippet_please_wait"/>


    </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>
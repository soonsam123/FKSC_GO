<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolBar_layout_top_bar"
            android:theme="@style/ToolbarColoredIcons"
            app:tabGravity="fill"
            app:tabMode="fixed">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- FKSC Logo -->
                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:src="@drawable/logofkscsemfundo"
                    android:id="@+id/logoFKSC_topBar"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:contentDescription="@string/logofksc"/>

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtView_fksc_topBar"
                    android:text="@string/app_name"
                    android:textColor="@color/colorWhite"
                    android:textSize="19sp"
                    android:layout_toEndOf="@+id/logoFKSC_topBar"
                    android:layout_centerVertical="true"/>

                <!-- CBKSC Logo -->
                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/cbksc_logo"
                    android:id="@+id/logoCBKSC_topBar"
                    android:layout_toEndOf="@+id/txtView_fksc_topBar"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:contentDescription="@string/logofksc"/>

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtView_cbksc_topBar"
                    android:text="@string/cbksc"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp"
                    android:layout_toEndOf="@+id/logoCBKSC_topBar"
                    android:layout_centerVertical="true"/>


            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>


</merge>